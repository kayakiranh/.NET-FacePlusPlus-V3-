
@{
    ViewBag.Title = "RemoveFaceset";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
        <h1>FaceSet Delete API</h1>
        <p><a href="https://console.faceplusplus.com/documents/6329394" target="_blank">Go to Full Document Page</a></p>
        <p>Important : if you can know/call tokens(from db, xml...), token versions is recommended. Token api names are inside full document page.</p>
        <p>Delete a FaceSet.</p><br />
    </div>
    <div class="col-md-12">
        <h2>FaceSet Delete API Form</h2>
        @using (Html.BeginForm("RemoveFaceset", "Default", FormMethod.Post))
        {
            <label>Outer ID : </label>
            <input id="rfsOuter" type="text" name="rfsOuter" class="form-control" placeholder="Outer ID" value="Test" required />
            <label>Check Empty : </label>
            <input id="rfsForce" type="text" name="rfsForce" class="form-control" placeholder="1/0 (Default : 1)" value="1" />
            <input type="submit" value="Remove Faceset" class="btn btn-primary btn-block" />
        }
    </div>
    <div class="col-md-12" runat="server" ID="result" style="white-space: pre !important; margin-top:20px;">
        @{
            if (ViewBag.Result != null)
            {
                @ViewBag.Result
            }
        }
    </div>
</div>